<effect name="On Off" comment="Very simple effect : Turn on/off lights">
	<var name="duration" value="0.5" />
	<group id="0" on="false" />
	<loop repeat="2">
		<light id="1" on="true" />
		<timer duration="$duration" />
		<light id="1" on="false" />
		<light id="2" on="true" />
		<timer duration="$duration" />
		<light id="2" on="false" />
		<light id="3" on="true" />
		<timer duration="$duration" />
		<light id="3" on="false" />
	</loop>
</effect>
